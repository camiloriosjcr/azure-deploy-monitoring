{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "type": "string",
      "defaultValue": "UbuntuMonitorVM",
      "metadata": {
        "description": "Nombre de la máquina virtual"
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Nombre de usuario administrador de la VM"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Contraseña para el usuario administrador"
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_D2s_v3",
      "allowedValues": [
        "Standard_B2ms",
        "Standard_D2s_v3",
        "Standard_D4s_v3"
      ],
      "metadata": {
        "description": "Tamaño de la VM"
      }
    },
    "osDiskSizeGB": {
      "type": "int",
      "defaultValue": 30,
      "metadata": {
        "description": "Tamaño del disco del sistema operativo"
      }
    },
    "networkName": {
      "type": "string",
      "defaultValue": "UbuntuMonitorVNet",
      "metadata": {
        "description": "Nombre de la red virtual"
      }
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "UbuntuMonitorSubnet",
      "metadata": {
        "description": "Nombre de la subred"
      }
    },
    "imagePublisher": {
      "type": "string",
      "defaultValue": "Canonical",
      "metadata": {
        "description": "Proveedor de la imagen de la VM"
      }
    },
    "imageOffer": {
      "type": "string",
      "defaultValue": "UbuntuServer",
      "metadata": {
        "description": "Oferta de la imagen de la VM"
      }
    },
    "imageSku": {
      "type": "string",
      "defaultValue": "20_04-lts",
      "metadata": {
        "description": "SKU de la imagen de la VM"
      }
    },
    "imageVersion": {
      "type": "string",
      "defaultValue": "latest",
      "metadata": {
        "description": "Versión de la imagen de la VM"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2021-03-01",
      "name": "[parameters('vmName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "osDisk": {
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "Premium_LRS"
            },
            "diskSizeGB": "[parameters('osDiskSizeGB')]"
          },
          "imageReference": {
            "publisher": "[parameters('imagePublisher')]",
            "offer": "[parameters('imageOffer')]",
            "sku": "[parameters('imageSku')]",
            "version": "[parameters('imageVersion')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "vmName": {
      "type": "string",
      "value": "[parameters('vmName')]"
    }
  }
}